@model List<Receita>

@if (Model.Count() > 0)
{
    <h4>Patrocinados</h4>
    foreach (var receita in Model)
    {
        <div class="row tb-busca">
            <article class="columns small-12 large-12 medium-12">
                <a href="~/Receitas/Receita/@receita.Id">
                    <h4>@receita.Titulo</h4>
                    <p>
                        Data: @receita.Data.ToDataPost()
                        <br />
                        Autor: @receita.NomeAutor
                    </p>
                </a>
            </article>
        </div>
    }


}