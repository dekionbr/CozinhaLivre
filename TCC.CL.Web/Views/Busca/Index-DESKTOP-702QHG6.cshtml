@model Paginacao<TCC.CL.Core.Entities.Receita>
@{
    ViewBag.Title = "Index";
}

@Html.Partial("_Busca")

<div class="row expanded busca">
    <div class="large-2 medium-12 large-push-10 columns">
        @*@Html.Partial("_Patrocinio")*@
    </div>
    <div class="large-10 medium-12 large-pull-2 columns">
        <h4>Resultados</h4>
        <div class="row">
            <div class="large-12 medium-12">
                @if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <div class="row tb-busca">
                            <div class="columns small-12 large-1 medium-1">
                             <img src="@item.GetUrlImagem(75, 75)" alt="@item.Titulo"/>
                            </div>
                            <article class="columns small-12 large-9 medium-9">
                                <h4>@item.Titulo</h4>
                                <p>
                                    @item.Resumo(15)
                                </p>
                            </article>
                            <footer class="columns small-12 large-2 medium-2">
                                <p>
                                    Ultima revisão: @item.Data
                                    <br />
                                    Autor: @item.Autor.Nome
                                </p>
                            </footer>
                        </div>
                    }
                    
                    if (Model.TotalPaginas > 1)
                    {
                        @Html.Paginacao(Model)
                    }

                }
                else
                {
                    <p>Nenhuma receita no momento</p>
                }
                
            </div>
        </div>
    </div>

</div>
