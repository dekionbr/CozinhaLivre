@model Paginacao<PessoaJuridica>
@{
    ViewBag.Title = "Patrocinadores";
}


<div class="row">

    @Html.Partial("_MenuVertical")

    <div class="large-10 medium-12 columns">
        <h2>Lista de Patrocinadores</h2>
        <div class="row">
            <div class="large-2 large-offset-10 columns">
                <a href="@Url.Action("IncluirPatrocinador")" class="button">Incluir Novo</a>
            </div>
        </div>
        <div class="row">
            <div class="large-12">
                @if (Model.Count > 0)
                {
                    <table class="stack hover" width="100%">
                        <thead>
                            <tr>
                                <th>#ID</th>
                                <th>Razao Social</th>
                                <th>Nome Fantasia</th>
                                <th>CNPJ</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>#@item.Id</td>
                                    <td>@item.RazaoSocial</td>
                                    <td>@item.NomeFantasia</td>
                                    <td>@item.CNPJ</td>
                                    <td>
                                        <a class="tiny button" href="@Url.Action("Patrocinador", new { id = @item.Id})">Editar</a>
                                        <a class="tiny button" href="@Url.Action("DeletarPatrocinador", new { id = @item.Id })">Deletar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>

                    if (Model.TotalPaginas > 1)
                    {
                        @Html.Paginacao(Model)
                    }
                }
                else
                {
                    <p>Nenhum patrocinador no momento</p>
                }
            </div>
        </div>
    </div>

</div>
