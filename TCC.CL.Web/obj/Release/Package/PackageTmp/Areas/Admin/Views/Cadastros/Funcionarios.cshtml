@model Paginacao<Funcionario>
@{
    ViewBag.Title = "Funcionarios";
}

<div class="row">

    @Html.Partial("_MenuVertical")

    <div class="large-10 medium-12 columns">
        <h2>Lista de Funcionarios</h2>
        <div class="row">
            <div class="large-2 large-offset-10 columns">
                <a href="@Url.Action("IncluirFuncionario")" class="button">Incluir Novo</a>
            </div>
        </div>
        <div class="row">
            <div class="large-12">
                @if (Model.Count > 0)
                {

                    <table class="stack hover" width="100%">
                        <thead>
                            <tr>
                                <th>#ID</th>
                                <th>Nome</th>
                                @*<th>Email</th>*@
                                <th>Cargo</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>#@item.Id</td>
                                    <td><span class="alert badge">Novo</span> @item.Nome </td>
                                    @*<td>@item.Usuario.EMail</td>*@
                                    <td>@item.TipoFuncionario.GetDescription()</td>
                                    <td>
                                        <a class="tiny button" href="@Url.Action("Funcionario", new { id = @item.Id})">Editar</a>
                                        <a class="tiny button" href="@Url.Action("DeletarFuncionario", new { id = @item.Id})">Deletar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>

                    if (Model.TotalPaginas > 1)
                    {
                        @Html.Paginacao(Model)
                    }

                }
                else
                { 
                    <p>Nenhum funcionario no momento</p>
                }
            </div>
        </div>

    </div>
</div>
